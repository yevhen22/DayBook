@model DayBook.Models.ViewModels.DayRecordViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>DayBook</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DayRecord)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DayRecord)
        </dd>

    </dl>

    <table>
        <tr>
            <th>Title</th>
            <th>Image</th>
        </tr>

        @foreach (var item in Model.ImageModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageTitle)
                </td>
                <td>
                    @Html.Raw("<img style='width:180px; height:160px;' src=\"data:image/jpeg;base64,"
                                        + Convert.ToBase64String(item.ImageByte) + "\" />")
                </td>
            </tr>
        }

    </table>

</div>
